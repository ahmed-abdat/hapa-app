# Database connection strings (Neon PostgreSQL)
POSTGRES_URL=postgresql://user:password@ep-example-123456.us-east-2.aws.neon.tech/dbname?sslmode=require
# Optional: Pooled connection for production (automatically used if available)
POSTGRES_URL_POOLED=postgresql://user:password@ep-example-123456-pooler.us-east-2.aws.neon.tech/dbname?sslmode=require
# Used to encrypt JWT tokens
PAYLOAD_SECRET=YOUR_SECRET_HERE
# Used to configure CORS, format links and more. No trailing slash
NEXT_PUBLIC_SERVER_URL=http://localhost:3000
# Secret used to authenticate cron jobs
CRON_SECRET=YOUR_CRON_SECRET_HERE
# Used to validate preview requests
PREVIEW_SECRET=YOUR_SECRET_HERE
# Vercel Blob storage token for media uploads (legacy)
BLOB_READ_WRITE_TOKEN=YOUR_VERCEL_BLOB_TOKEN_HERE

# Cloudflare R2 Storage Configuration (used in development and production)
R2_ACCESS_KEY_ID=YOUR_R2_ACCESS_KEY_ID
R2_SECRET_ACCESS_KEY=YOUR_R2_SECRET_ACCESS_KEY
R2_BUCKET_NAME=YOUR_R2_BUCKET_NAME
R2_ACCOUNT_ID=YOUR_R2_ACCOUNT_ID
R2_PUBLIC_URL=https://pub-[your-hash].r2.dev
# Optional: Custom domain for R2 (recommended for production)
R2_CUSTOM_DOMAIN=https://media.hapa.mr

# Email Configuration (Resend API for modern email delivery)
EMAIL_FROM=noreply@hapa.mr
RESEND_API_KEY=YOUR_RESEND_API_KEY_HERE